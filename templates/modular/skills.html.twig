<div class="avoid_pagebreak">
  <h4>{{ header.title }}</h4>

  {{ content }}

  <div class="row design">
    <div class="large-7 columns {% if header.column1_animation %}animated {{ header.column1_animation }}{% endif %}">
      <h6>{{ header.column1_name }}</h6>
      {% for item in header.column1 %}
      <ul class="small-block-grid-2">
        <li class="name">{{ item.name }}</li>
        <li>
          <ul class="small-block-grid-8 ellipses">
            {% for i in 1..8 %}
            <li><span {% if i > item.level %}class="grey"{% endif %}></span></li>
            {% endfor %}
          </ul>
        </li>
      </ul>
      {% endfor %}
    </div>
    <div class="large-5 columns {% if header.column2_animation %}animated {{ header.column2_animation }}{% endif %}">
      <h6>{{ header.column2_name }}</h6>
      {% for item in header.column2 %}
      <div class="name">{{ item.name }}</div>
      {% endfor %}
    </div>
  </div>
</div>
